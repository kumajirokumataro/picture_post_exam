<h1>お気に入り一覧</h1>
<table>
  <tr>
    <th>内容</th>
    <th>画像</th>
    <th>ユーザー名</th>
  </tr>

<% @my_favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.picture_post.content %></td>
    <td><% if favorite.picture_post.image && favorite.picture_post.image.url %>
        <%= link_to(image_tag favorite.picture_post.image.url, width: '100') %></td>
        <% end %>
    <td><%= favorite.picture_post.user.name %></td>
  </tr>
<% end %>
</table>

<%= link_to '投稿一覧へ戻る', picture_posts_path %>
