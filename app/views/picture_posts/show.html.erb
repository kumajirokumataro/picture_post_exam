<h1>詳細画面</h1>
<p>内容: <%= @picture_post.content %></p>
<p>Image: <%= image_tag @picture_post.image.url,width: '100' if @picture_post.image && @picture_post.image.url%></p>

<% unless @picture_post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_post_id: @picture_post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to "一覧画面にもどる", picture_posts_path %>