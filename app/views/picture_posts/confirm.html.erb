<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture_post, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>本文:<%= @picture_post.content %></p>
  <%= image_tag(@picture_post.image.url, width: '100') if @picture_post.image && @picture_post.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit  "登録する" %>

  <%= form_with(model:@picture_post, local:true, method:"get") do |form| %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit "戻る", name: 'back' %>
  <% end %>
<% end %>